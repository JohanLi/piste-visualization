{
  "name": "piste-visualization",
  "version": "0.1.0",
  "description": "Create and edit pistes via Google Maps and visualize them",
  "scripts": {
    "start": "run-p start:*",
    "start:client": "webpack-dev-server --hot --env.development",
    "start:server": "webpack --config webpack.server.config.js --mode development --watch",
    "build": "rm -rf ./build && webpack --mode production",
    "lint-staged": "lint-staged",
    "test": "jest --env=node",
    "test:lint": "eslint ./src/**/*.tsx",
    "test:tsc": "tsc --skipLibCheck"
  },
  "author": "Johan Li",
  "license": "ISC",
  "dependencies": {
    "@react-google-maps/api": "^1.9.8",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "geolib": "^3.3.1",
    "ioredis": "^4.17.3",
    "pg": "^8.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.0.6",
    "react-router-dom": "^5.2.0",
    "victory": "^35.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@material-ui/core": "^4.11.0",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/icons": "^4.9.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/googlemaps": "^3.39.9",
    "@types/ioredis": "^4.17.2",
    "@types/jest": "^26.0.5",
    "@types/pg": "^7.14.4",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.0",
    "css-loader": "^3.6.0",
    "dotenv-webpack": "^2.0.0",
    "eslint": "^7.5.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon-webpack-plugin": "^4.3.2",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "pre-commit": [
    "lint-staged",
    "test",
    "test:lint",
    "test:tsc"
  ],
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "plugins": [
      "react-hot-loader/babel",
      [
        "babel-plugin-import",
        {
          "libraryName": "@material-ui/core",
          "libraryDirectory": "esm",
          "camel2DashComponentName": false
        },
        "core"
      ],
      [
        "babel-plugin-import",
        {
          "libraryName": "@material-ui/icons",
          "libraryDirectory": "esm",
          "camel2DashComponentName": false
        },
        "icons"
      ],
      [
        "babel-plugin-import",
        {
          "libraryName": "@material-ui/lab",
          "libraryDirectory": "esm",
          "camel2DashComponentName": false
        },
        "lab"
      ]
    ],
    "compact": false
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    }
  }
}
